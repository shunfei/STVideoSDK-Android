<?xml version="1.0" encoding="utf-8"?>
<LinearLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sunteng.videoadsample.PlayActivity">
 
    <Button android:id="@+id/bt_play_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/small_window"/>
    
     <Button android:id="@+id/bt_play_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/large_window"/>
    
    <RelativeLayout
        android:id="@+id/window_small"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:visibility="gone">
    </RelativeLayout>
    
    
      <RelativeLayout
        android:id="@+id/window_large"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:visibility="gone">
    </RelativeLayout>
    
</LinearLayout>